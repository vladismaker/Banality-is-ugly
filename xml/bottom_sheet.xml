<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="50dp"
    app:layout_behavior = "com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_palette"
            android:scaleType="centerCrop"
            android:layout_marginVertical="5dp"
            />
        <Button
            android:id="@+id/buttonNext"
            android:onClick="onButtonClickNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="next"
            />
    </FrameLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="#535353"
        />
    <GridLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:orientation="horizontal"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_white"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/white"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_bejeviy"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/bejeviy"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_light_grey"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/light_gray"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_grey"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/grey"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_black"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/black"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_green"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/green"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_yellow"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/yellow"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_orange"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/orange"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_red"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/red"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/button_blue"
            android:layout_margin="20dp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:elevation="10dp"
            app:riv_corner_radius="10dp"
            android:src="@color/blue"/>
    </GridLayout>


</LinearLayout>