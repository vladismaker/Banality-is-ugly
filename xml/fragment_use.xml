<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UseFragment"
    android:background="@color/light_gray"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingHorizontal="7dp"
        android:background="@drawable/stage">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:padding="5dp"
        android:src="@drawable/ic_clothes_normal"
        />
    <!--            <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:elevation="4dp"
                    android:background="@color/grey"/>-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:padding="5dp"
        android:src="@drawable/ic_color_normal"

        />
    <View
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:elevation="4dp"
        android:background="@color/grey"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:padding="5dp"
        android:src="@drawable/ic_background_click"

        />
    <View
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:elevation="4dp"
        android:background="@color/grey"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:padding="5dp"
        android:src="@drawable/ic_words_normal"

        />
    <!--            <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:elevation="4dp"
                    android:background="@color/grey"/>-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:padding="5dp"
        android:src="@drawable/ic_font_normal"

        />
</LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
